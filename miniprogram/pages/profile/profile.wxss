/* pages/profile/profile.wxss */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 80vh;
}

/* 滚动区域 */
.scrollarea {
  flex: 1;
  width: 100%;
  background-color: #f5f7fa;
}

/* 头像区域 */
.userinfo {
  display: flex;
  align-items: center;
  width: 100%;
  background: white;
  padding: 30rpx;
  margin-bottom: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.avatar-wrapper {
  padding: 0;
  width: 140rpx;
  height: 140rpx;
  background: none;
  border: none;
  margin-right: 30rpx;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(106, 17, 203, 0.1);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.avatar:active {
  transform: scale(0.96);
}

.nickname-wrapper {
  flex: 1;
}

.nickname-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.nickname-input {
  font-size: 32rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #fdfdfd;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

/* 表单区域 */
.profile-form {
  width: 80%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 36rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.input,
.picker {
  font-size: 32rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #fdfdfd;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

.picker-value {
  font-size: 32rpx;
  color: #333333;
}

/* 保存按钮 */
.save-button {
  width: 90%;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  color: #ffffff;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 40rpx;
  text-align: center;
  margin-top: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(106, 17, 203, 0.15);
  transition: all 0.3s ease;
}

.save-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(106, 17, 203, 0.1);
}