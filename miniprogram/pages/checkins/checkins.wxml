<!-- page.wxml -->
<view class="container">
  <view class="header">

    <text class="title">今日打卡人员({{todayCheckins.length}}人)</text>
  </view>

  <view class="checkin-list">
    <block wx:for="{{todayCheckins}}" wx:key="index">
      <view class="checkin-item">
        <image class="avatar" src="{{item.avatar}}" mode="aspectFill"></image>
        <text class="name">{{item.name}}</text>
        <view class="state-text {{item.state === 0 ? 'state-error' : ''}}  {{item.state === 1 ? 'state-normal' : ''}} {{item.state === 2 ? 'state-success' : ''}}">
          {{stateMap[item.state]}}
      </view>
        <text class=" time">09:{{20 + index}}:3{{index}}</text>
      </view>
    </block>
  </view>
  <button class="checkin-button" bindtap="navigateToCheckins">打卡</button>
</view>