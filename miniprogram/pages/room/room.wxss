/* Sidebar styling */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--modal-overlay);
  z-index: 200;
}

.sidebar-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 360rpx;
  height: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  box-shadow: 4rpx 0 12rpx rgba(0, 0, 0, 0.1);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  z-index: 201;
}

/* 右侧边栏样式 */
.sidebar-popup.right-sidebar {
  left: auto;
  right: 0;
  transform: translateX(100%);
  box-shadow: -4rpx 0 12rpx rgba(0, 0, 0, 0.1);
}

/* 深色模式下的侧边栏样式 */
.dark-mode .sidebar-popup {
  background-color: #1e1e1e;
  color: #ffffff;
}

.sidebar-popup.slide-in {
  transform: translateX(0);
}

.sidebar-popup.slide-out {
  transform: translateX(-100%);
}

.sidebar-popup.right-sidebar.slide-in {
  transform: translateX(0);
}

.sidebar-popup.right-sidebar.slide-out {
  transform: translateX(100%);
}

.sidebar-header {
  font-size: 40rpx !important;
  font-weight: bold;
  padding-bottom: 24rpx;
  border-bottom: 1px solid var(--border-color);
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

.sidebar-body {
  font-size: 36rpx !important;
  padding: 20rpx 0;
  color: var(--text-primary);
  border-bottom: 1px solid var(--border-color);
}

.sidebar-body:last-child {
  border-bottom: none;
}

.dark-sidebar {
  background-color: var(--card-bg);
  background: linear-gradient(135deg, #8a11cb 0%, #3585fc 100%);
  color: #fff;
}