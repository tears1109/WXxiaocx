.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f8f8f8;
}

.login-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  background-color: #07C160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.tip {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}