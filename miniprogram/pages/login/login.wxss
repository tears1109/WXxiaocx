.petal-1,
.petal-5,
.petal-9,
.petal-13,
.petal-17 {
  width: 30rpx;
  height: 30rpx;
  background: rgba(255, 210, 220, 0.9);
  z-index: 15;
  box-shadow: 0 0 8rpx rgba(255, 200, 210, 0.6);
  animation-name: floatPetalFront;
}

