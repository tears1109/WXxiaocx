/* 浅色主题 (默认) */
.light-mode {
  --bg-color: #f5f6fa;
  --card-bg: #ffffff;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #f0f2f5;
  --highlight-color: #6a11cb;
  --highlight-gradient: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  --btn-shadow: 0 4rpx 12rpx rgba(106, 17, 203, 0.2);
  --btn-text: #ffffff;
}

/* 深色主题 */
.dark-mode {
  --bg-color: #121212;
  --card-bg: #1e1e1e;
  --text-primary: #ffffff;
  --text-secondary: #b0b0b0;
  --text-tertiary: #808080;
  --border-color: #333333;
  --highlight-color: #8a11cb;
  --highlight-gradient: linear-gradient(135deg, #8a11cb 0%, #3585fc 100%);
  --btn-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
  --btn-text: #ffffff;
}

/* 主题切换按钮 */
.theme-toggle {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  backdrop-filter: blur(10px);
}

.theme-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--highlight-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.sun-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ffeb3b;
  box-shadow: 0 0 8rpx rgba(255, 235, 59, 0.8);
}

.moon-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: transparent;
  box-shadow: inset 8rpx -8rpx 0 0 #ffffff;
  transform: rotate(-30deg);
}

.theme-toggle text {
  font-size: 24rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  position: relative;
  background-color: var(--bg-color);
  transition: background-color 0.3s ease;
}

.petals-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.title-container {
  margin-top: 160rpx;
  text-align: center;
  z-index: 10;
}

.title-text {
  font-size: 64rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  opacity: 0;
  transform: translateY(-40rpx);
  animation: fadeInDown 1s ease forwards;
}

.subtitle-text {
  font-size: 36rpx;
  color: var(--text-secondary);
  opacity: 0;
  transform: translateY(-20rpx);
  animation: fadeInDown 1s ease 0.3s forwards;
}

.login-box {
  margin-top: 100rpx;
  background-color: var(--card-bg);
  border-radius: 24rpx;
  padding: 48rpx;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  opacity: 0;
  transform: translateY(40rpx);
  animation: fadeInUp 1s ease 0.6s forwards;
}

.avatar-container {
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-container {
  width: 100%;
  position: relative;
  overflow: hidden;
  border-radius: 44rpx;
}

.login-btn {
  background: var(--highlight-gradient);
  color: var(--btn-text);
  border: none;
  border-radius: 44rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding: 24rpx 0;
  width: 100%;
  box-shadow: var(--btn-shadow);
}

.breathing-btn {
  animation: breathing 3s ease-in-out infinite;
}

.ripple {
  position: absolute;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  width: 10px;
  height: 10px;
  margin-left: -5px;
  margin-top: -5px;
  opacity: 0;
  animation: ripple 0.8s ease-out;
  pointer-events: none;
}

.petals {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.petal {
  position: absolute;
  width: 40rpx;
  height: 20rpx;
  background-color: rgba(255, 204, 213, 0.7);
  border-radius: 50%;
  transform-origin: center;
  box-shadow: 0 0 10rpx rgba(255, 204, 213, 0.3);
  animation: fall linear infinite, sway ease-in-out infinite alternate;
}

/* 动画定义 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes breathing {

  0%,
  100% {
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(106, 17, 203, 0.2);
  }

  50% {
    transform: scale(1.03);
    box-shadow: 0 8rpx 20rpx rgba(106, 17, 203, 0.4);
  }
}

@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 0.7;
  }

  100% {
    transform: scale(100);
    opacity: 0;
  }
}

@keyframes fall {
  from {
    top: -10%;
  }

  to {
    top: 110%;
  }
}

@keyframes sway {
  from {
    transform: translateX(-20rpx) rotate(-20deg);
  }

  to {
    transform: translateX(20rpx) rotate(20deg);
  }
}

