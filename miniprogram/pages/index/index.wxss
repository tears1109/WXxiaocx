.checkin-button {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border: none;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
}

.checkin-button:active {
  opacity: 0.9;
}

/* 侧边栏 */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
  animation: fadeIn 0.3s ease;
}

.sidebar-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 70%;
  height: 100%;
  background: white;
  z-index: 101;
  transform: translateX(-100%);
  transition: transform 0.3s ease-out;
}

.sidebar-popup.slide-in {
  transform: translateX(0);
}

.sidebar-header {
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 2rpx solid #f0f2f5;
}

.sidebar-body {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 2rpx solid #f0f2f5;
}

.sidebar-body:active {
  background: #f8f9fd;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 24rpx;
  color: #999;
  font-size: 28rpx;
}