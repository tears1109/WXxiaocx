/* 页面容器 */
.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f6fa;
}

/* 固定内容区域 */
.fixed-content {
  padding: 24rpx;
}

/* 用户信息卡片 */
.user-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(106, 17, 203, 0.1);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-score {
  font-size: 28rpx;
  color: #666;
}

.user-rank {
  text-align: center;
  padding: 16rpx 24rpx;
  background: #f8f9fd;
  border-radius: 12rpx;
}

.rank-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.rank-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #6a11cb;
}

/* 房间信息 */
.room-header {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.room-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.room-type {
  display: inline-block;
  font-size: 24rpx;
  color: #666;
  background: #f8f9fd;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 统计信息 */
.stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(106, 17, 203, 0.2);
}

.stats-item {
  text-align: center;
  color: white;
  font-size: 28rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 可滚动内容区域 */
.scrollable-content {
  flex: 1;
  padding: 0 24rpx;
}

.leaderboard-scroll {
  height: 100%;
}

/* 排行榜 */
.leaderboard {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  background: white;
  border: 2rpx solid #f0f2f5;
  transition: transform 0.2s ease;
}

.user-item:last-child {
  margin-bottom: 0;
}

.user-item:active {
  transform: scale(0.98);
}

.user-item.first {
  background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(253, 160, 133, 0.2);
}

.rank {
  width: 48rpx;
  height: 48rpx;
  background: #f8f9fd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-weight: 600;
  color: #666;
  font-size: 24rpx;
}

.user-item.first .rank {
  background: rgba(255, 255, 255, 0.3);
  color: white;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 4rpx solid white;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 16rpx;
}

.name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.attempts {
  font-size: 24rpx;
  color: #666;
}

.user-item.first .name,
.user-item.first .attempts {
  color: white;
}

.score {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
}

.user-item.first .score {
  color: white;
}

